
<div class="container">
   <% if @users.blank? %>
   <p>There are not any users currently in the system.</p>
   <% else %>
   <table id="usere" class="table table-striped table-bordered display" style=" margin-left: auto;margin-right: auto;width:100%">
      <thead>
         <th>Full Name</th>
         <th>Email</th>
         <th>Status</th>
         <th>Change Status</th>
      </thead>
      <tbody>
         <% @users.each do |u| %>
         <tr>
            <td><%=  u.name -%></td>
            <td><%=  u.email -%></td>
            <td><%=  u.status -%></td>
            <td><%= link_to 'Change Status', {:action => "changeStatus", :id => u.id} %></td>
            <% end %>
         </tr>
      </tbody>
   </table>
   <% end %>
</div>